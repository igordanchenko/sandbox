{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "declaration": true,
        "target": "ES2015",
        "module": "NodeNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
